<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="error">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="it.infocert" level="error" />
    <logger name="it.infocert.eigor.LowLevelAPIUsage" level="all" />
    <logger name="com.helger.commons.xml.ls" level="info" />

</configuration>
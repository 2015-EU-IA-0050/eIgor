<project>
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>1.5.2.RELEASE</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>it.infocert.eigor</groupId>
    <artifactId>eigor</artifactId>
    <version>0.0.1-SNAPSHOT</version>

    <properties>
        <java.version>1.8</java.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
        </dependency>
        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
            <version>20.0</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.pitest</groupId>
                <artifactId>pitest-maven</artifactId>
                <version>1.1.11</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>mutationCoverage</goal>
                        </goals>
                        <phase>test</phase>
                    </execution>
                </executions>
            </plugin>
            <!-- Get and build from https://github.com/danidemi/template-generator-maven-plugin -->
            <plugin>
                <groupId>com.danidemi</groupId>
                <artifactId>template-generator-maven-plugin</artifactId>
                <version>0.0.2</version>
                <executions>
                    <execution>
                        <id>generate-country-codes</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <pathToCsv>${project.basedir}/src/main/resources/countrycodes.csv</pathToCsv>
                            <pathToTemplate>${project.basedir}/src/main/resources/CountryCodesTemplate.vm
                            </pathToTemplate>
                            <pathToOutputFolder>${project.build.directory}/generated-sources/fromcsv
                            </pathToOutputFolder>
                            <contextMode>ONE_CONTEXT_PER_CSV</contextMode>
                            <fileNameTemplate>it/infocert/eigor/model/core/enums/Iso31661CountryCodes.java
                            </fileNameTemplate>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-untdid-4451</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <pathToCsv>${project.basedir}/src/main/resources/UNTDID-4451.csv</pathToCsv>
                            <pathToTemplate>
                                ${project.basedir}/src/main/resources/Untdid4451InvoiceNoteSubjectCode.java.vm
                            </pathToTemplate>
                            <pathToOutputFolder>${project.build.directory}/generated-sources/fromcsv
                            </pathToOutputFolder>
                            <contextMode>ONE_CONTEXT_PER_CSV</contextMode>
                            <fileNameTemplate>it/infocert/eigor/model/core/enums/Untdid4451InvoiceNoteSubjectCode.java
                            </fileNameTemplate>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-untdid-1001</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <pathToCsv>${project.basedir}/src/main/resources/UNTDID-1001.csv</pathToCsv>
                            <pathToTemplate>${project.basedir}/src/main/resources/Untdid1001InvoiceTypeCode.java.vm
                            </pathToTemplate>
                            <pathToOutputFolder>${project.build.directory}/generated-sources/fromcsv
                            </pathToOutputFolder>
                            <contextMode>ONE_CONTEXT_PER_CSV</contextMode>
                            <fileNameTemplate>it/infocert/eigor/model/core/enums/Untdid1001InvoiceTypeCode.java
                            </fileNameTemplate>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-untdid-4461</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <pathToCsv>${project.basedir}/src/main/resources/UNTDID-4461.csv</pathToCsv>
                            <pathToTemplate>${project.basedir}/src/main/resources/Untdid4461PaymentMeansCode.java.vm
                            </pathToTemplate>
                            <pathToOutputFolder>${project.build.directory}/generated-sources/fromcsv
                            </pathToOutputFolder>
                            <contextMode>ONE_CONTEXT_PER_CSV</contextMode>
                            <fileNameTemplate>it/infocert/eigor/model/core/enums/Untdid4461PaymentMeansCode.java
                            </fileNameTemplate>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-untdid-5305</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <pathToCsv>${project.basedir}/src/main/resources/UNTDID-5305.csv</pathToCsv>
                            <pathToTemplate>
                                ${project.basedir}/src/main/resources/Untdid5305DutyTaxFeeCategories.java.vm
                            </pathToTemplate>
                            <pathToOutputFolder>${project.build.directory}/generated-sources/fromcsv
                            </pathToOutputFolder>
                            <contextMode>ONE_CONTEXT_PER_CSV</contextMode>
                            <fileNameTemplate>it/infocert/eigor/model/core/enums/Untdid5305DutyTaxFeeCategories.java
                            </fileNameTemplate>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-untdid-7161</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <pathToCsv>${project.basedir}/src/main/resources/UNTDID-7161.csv</pathToCsv>
                            <pathToTemplate>
                                ${project.basedir}/src/main/resources/Untdid7161SpecialServicesCodes.java.vm
                            </pathToTemplate>
                            <pathToOutputFolder>${project.build.directory}/generated-sources/fromcsv
                            </pathToOutputFolder>
                            <contextMode>ONE_CONTEXT_PER_CSV</contextMode>
                            <fileNameTemplate>it/infocert/eigor/model/core/enums/Untdid7161SpecialServicesCodes.java
                            </fileNameTemplate>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-vat-exemption-reasons-codes</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <pathToCsv>${project.basedir}/src/main/resources/VatExemptionReasonsCodes.csv</pathToCsv>
                            <pathToTemplate>${project.basedir}/src/main/resources/VatExemptionReasonsCodes.java.vm
                            </pathToTemplate>
                            <pathToOutputFolder>${project.build.directory}/generated-sources/fromcsv
                            </pathToOutputFolder>
                            <contextMode>ONE_CONTEXT_PER_CSV</contextMode>
                            <fileNameTemplate>it/infocert/eigor/model/core/enums/VatExemptionReasonsCodes.java
                            </fileNameTemplate>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-untdid-5189</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <pathToCsv>${project.basedir}/src/main/resources/UNTDID-5189.csv</pathToCsv>
                            <pathToTemplate>
                                ${project.basedir}/src/main/resources/Untdid5189ChargeAllowanceDescriptionCodes.java.vm
                            </pathToTemplate>
                            <pathToOutputFolder>${project.build.directory}/generated-sources/fromcsv
                            </pathToOutputFolder>
                            <contextMode>ONE_CONTEXT_PER_CSV</contextMode>
                            <fileNameTemplate>
                                it/infocert/eigor/model/core/enums/Untdid5189ChargeAllowanceDescriptionCodes.java
                            </fileNameTemplate>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-iso-4217</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <pathToCsv>${project.basedir}/src/main/resources/ISO4217CurrenciesFundsCodes.csv</pathToCsv>
                            <pathToTemplate>${project.basedir}/src/main/resources/Iso4217CurrenciesFundsCodes.java.vm
                            </pathToTemplate>

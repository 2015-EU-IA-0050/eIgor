                    <execution>
                        <id>generate-untdid-2005</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <pathToCsv>${project.basedir}/src/main/resources/UNTDID-2005.csv</pathToCsv>
                            <pathToTemplate>

                            <fileNameTemplate>
                                it/infocert/eigor/model/core/enums/Untdid2005DateTimePeriodQualifiers.java
                            </fileNameTemplate>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-unit-of-measure</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <pathToCsv>${project.basedir}/src/main/resources/UnitsOfMeasureCodes.csv</pathToCsv>
                            <pathToTemplate>${project.basedir}/src/main/resources/UnitOfMeasureCodes.java.vm
                            </pathToTemplate>
                            <pathToOutputFolder>${project.build.directory}/generated-sources/fromcsv
                            </pathToOutputFolder>
                            <contextMode>ONE_CONTEXT_PER_CSV</contextMode>
                            <fileNameTemplate>it/infocert/eigor/model/core/enums/UnitOfMeasureCodes.java
                            </fileNameTemplate>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-bts</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <pathToCsv>${project.basedir}/src/main/resources/BTs.csv</pathToCsv>
                            <pathToTemplate>${project.basedir}/src/main/resources/BT.java.vm</pathToTemplate>
                            <pathToOutputFolder>${project.build.directory}/generated-sources/fromcsv
                            </pathToOutputFolder>
                            <contextMode>ONE_CONTEXT_PER_LINE</contextMode>
                            <fileNameTemplate>it/infocert/eigor/model/core/model/${BTBGClassName}.java
                            </fileNameTemplate>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-untdid-1153</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <pathToCsv>${project.basedir}/src/main/resources/UNTDID-1153.csv</pathToCsv>
                            <pathToTemplate>
                                ${project.basedir}/src/main/resources/Untdid1153ReferenceQualifierCode.java.vm
                            </pathToTemplate>
                            <pathToOutputFolder>${project.build.directory}/generated-sources/fromcsv
                            </pathToOutputFolder>
                            <contextMode>ONE_CONTEXT_PER_CSV</contextMode>
                            <fileNameTemplate>it/infocert/eigor/model/core/enums/Untdid1153ReferenceQualifierCode.java
                            </fileNameTemplate>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>3.0.0</version>
                <executions>
                    <execution>
                        <id>generate-country-codes</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>${project.build.directory}/generated-sources/fromcsv</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
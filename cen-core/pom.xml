                            <pathToTemplate>${project.basedir}/src/main/resources/TemplateFiles/BTs/BG.java.vm
                            </pathToTemplate>
                            <pathToOutputFolder>${project.build.directory}/generated-sources/fromcsv
                            </pathToOutputFolder>
                            <contextMode>ONE_CONTEXT_PER_TAG</contextMode>
                            <tagExpressions>
                                <param>@{row.data.ParentClass.equals("")?"BG0000Invoice":row.data.ParentClass}</param>
                                <param>@{row.data.BTBGClassName}</param>
                            </tagExpressions>
                            <includeContextExpression>@{rows[0].data.BTBGClassName.startsWith("BG")}
                            </includeContextExpression>
                            <fileNameTemplate>it/infocert/eigor/model/core/model/${rows[0].data.BTBGClassName}.java

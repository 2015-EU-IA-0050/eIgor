                            <pathToCsv>${project.basedir}/src/main/resources/TemplateFiles/BTs/BTsAndBGs.csv</pathToCsv>
                            <pathToTemplate>${project.basedir}/src/main/resources/TemplateFiles/BTs/BT.java.vm
                            </pathToTemplate>
                            <pathToOutputFolder>${project.build.directory}/generated-sources/fromcsv
                            </pathToOutputFolder>
                            <contextMode>ONE_CONTEXT_PER_LINE</contextMode>
                            <fileNameTemplate>it/infocert/eigor/model/core/model/${rows[0].data.BTBGClassName}.java
                            </fileNameTemplate>
                            <includeContextExpression>@{rows[0].data.BTBGClassName.startsWith("BT")}</includeContextExpression>
                        </configuration>
                    </execution>


                    <execution>
                        <id>generate-bgs</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
